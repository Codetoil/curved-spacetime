    <groupId>io.codetoil</groupId>
    <artifactId>curved-spacetime-website-maven-pomxml</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <dependencies>
        <dependency>
            <groupId>io.codetoil</groupId>
            <artifactId>curved-spacetime-loader-module</artifactId>
            <version>0.1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
